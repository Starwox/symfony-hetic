{% extends 'base.html.twig' %}

{% block body %}
{{ parent() }}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Username</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.email }}</td>
            <td>{{ user.username }}</td>
            <td>
                <a href="{{ path('edit_user', { 'id': user.id }) }}" class="btn btn-primary">Modifier</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
